{
  "name": "autopodbor",
  "version": "1.0.1",
  "description": "Лендинг по автоподбору (Автопрофи)",
  "main": "index.html",
  "scripts": {
    "start": "browser-sync start --server src --no-notify --no-ui --cwd src --files *.html,css/**/*,js/**/*",
    "startdst": "browser-sync start --server dst --no-notify --no-ui --cwd dst --files *.html,css/**/*,js/**/*",
    "test": "editorconfig-checker",
    "html": "html-minifier --remove-comments --collapse-whitespace --input-dir src --output-dir dst --file-ext html",
    "styles": "postcss src/style.css --use postcss-csso --no-map --output dst/style.css",
    "imgcopy": "scp -r src/img dst/img",
    "jscopy": "scp -r src/js dst/js",
    "build": "npm run html && npm run styles && npm run imgcopy && npm run jscopy",
    "deploy": "cd dist && scp -r /dist asmi-studio@asmi-studio.myjino.ru:domains/asmi-studio.myjino.ru/"
  },
  "keywords": [
    "web",
    "html"
  ],
  "author": "Asmi-Studio",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.26.12",
    "editorconfig-checker": "^3.1.0",
    "html-minifier": "*"
  }
}
